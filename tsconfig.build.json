{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.stories.*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "node_modules",
    "dist"
  ]
}
